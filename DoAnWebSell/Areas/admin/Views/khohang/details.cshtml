@model IEnumerable<Model.EF.ChiTietKho>

@{
    ViewBag.Title = "Chi tiết kho hàng";
    Layout = "~/Areas/admin/Views/Shared/_Layouts.cshtml";
    int i = 0;
}

@section header {
    Chi tiết kho hàng
}

<div class="ware-house mb-2">
    <div class="col-md-10">
        <label class="control-label col-md-2">Tên kho</label>
            @foreach (var item in Model)
            {
                <span>@item.KhoHang.TenKho</span>
                break;
            }
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" cellspacing="0">
            <thead>
                <tr style="text-align: center;">
                    <th width="5%">STT</th>
                    <th>Mã kho</th>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">
                            @{ i++; }
                            @i
                        </td>
                        <td>@item.MaKho</td>
                        <td>@item.SanPham.TenSP</td>
                        <td>@item.SoLuong</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
