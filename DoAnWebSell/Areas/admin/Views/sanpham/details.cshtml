@model  Model.EF.SanPham

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/admin/Views/Shared/_Layouts.cshtml";
    string trangThai = "";
}

@section header {
    Chi tiết sản phẩm
}

<div class="card-body">
    <table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
        <tr>
            <td>
                <table cellpadding="2" cellspacing="10">
                    <tr>
                        <td rowspan="15" class="pr-3"><img src="/assets/client/images/@Html.DisplayFor(model => model.HinhAnh)" width="100" height="100" /></td>
                        <td><label class="display-label">Mã sản phẩm:</label></td>
                        <td>@Html.DisplayFor(model => model.MaSP)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Tên sản phẩm:</label></td>
                        <td>@Html.DisplayFor(model => model.TenSP)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Tiêu đề meta title:</label></td>
                        <td>@Html.DisplayFor(model => model.MetaTitle)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Số lượng:</label></td>
                        <td>@Html.DisplayFor(model => model.SoLuong)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Đơn giá:</label></td>
                        <td>@Html.DisplayFor(model => model.DonGia)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Giá khuyến mãi:</label></td>
                        <td>@Html.DisplayFor(model => model.GiaKhuyenMai)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Thời gian bảo hành:</label></td>
                        <td>@Html.DisplayFor(model => model.ThoiHanBaoHanh) năm</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Ngày sản xuất:</label></td>
                        <td>@Html.DisplayFor(model => model.NgaySanXuat)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Ngày tạo:</label></td>
                        <td>@Html.DisplayFor(model => model.NgayTao)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Mô tả:</label></td>
                        <td>@Html.DisplayFor(model => model.MoTa)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Chi tiết:</label></td>
                        <td>@Html.DisplayFor(model => model.ChiTiet)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Trạng thái:</label></td>
                        <td>
                            @if (Model.TrangThai == true)
                            {
                                trangThai = "Kinh doanh";
                            }
                            else
                            {
                                trangThai = "Không kinh doanh";
                            }
                            @trangThai
                        </td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Tạo bởi:</label></td>
                        <td>@Html.DisplayFor(model => model.TaoBoi)</td>
                    </tr>   
                    <tr>
                        <td><label class="display-label">Danh mục sản phẩm:</label></td>
                        <td>@Html.DisplayFor(model => model.DanhMucSanPham.Name)</td>
                    </tr>
                    <tr>
                        <td><label class="display-label">Nhà cung cấp:</label></td>
                        <td>@Html.DisplayFor(model => model.NhaCungCap.TenNCC)</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>