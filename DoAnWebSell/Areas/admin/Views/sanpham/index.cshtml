@model PagedList.IPagedList<Model.EF.SanPham>
@using PagedList.Mvc

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/admin/Views/Shared/_Layouts.cshtml";
    string trthai = "";
}

@section header {
    Danh sách sản phẩm
}

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" cellspacing="0">
            <div class="d-flex">
                <div class="create w-80">
                    <a href="/admin/sanpham/create" class="btn btn-info"><i class="fas fa-plus"></i> Thêm mới</a>
                </div>
                @using (Html.BeginForm("index", "sanpham", FormMethod.Get))
                {
                    <div class="form-inline form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="basic-addon2" value="@ViewBag.Search" name="search">
                            <div class="input-group-append">
                                <button class="btn btn-dark" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Khuyến mãi</th>
                    <th>Trạng thái</th>
                    <th>Tạo bởi</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.MaSP">
                        <td>@item.MaSP</td>
                        <td style="text-align: center;"><img src="/assets/client/images/@item.HinhAnh" width="65" /></td>
                        <td>@item.TenSP</td>
                        <td>@item.SoLuong</td>
                        <td>@item.DonGia</td>
                        <td>@item.GiaKhuyenMai</td>
                        <td>
                            @if (item.TrangThai == true)
                            {
                                trthai = "Kinh doanh";
                            }
                            else
                            {
                                trthai = "Không kinh doanh";
                            }
                            @trthai
                        </td>
                        <td>@item.TaoBoi</td>
                        <td>
                            <a class="format-function-edit" href="/admin/sanpham/edit/@item.MaSP"><i class="fas fa-edit"></i> Chỉnh sửa</a>
                            <a class="format-function-detail" href="/admin/sanpham/details/@item.MaSP"><i class="fas fa-info"></i> Chi tiết</a>
                            @Ajax.ActionLink("Xóa", "delete", new { @id = item.MaSP }, new AjaxOptions
                       {
                           Confirm = "Bạn có muốn xóa sản phẩm này?",
                           OnComplete = "$(' #row_" + @item.MaSP + " ').remove()",
                           HttpMethod = "Delete"
                       })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="clear"></div>
        @Html.PagedListPager(Model, page => Url.Action("index",
                     new { page, @searchString = @ViewBag.Search }), new PagedListRenderOptions
                     {
                         DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                         DisplayLinkToLastPage = PagedListDisplayMode.Never,
                         DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                         DisplayLinkToNextPage = PagedListDisplayMode.Always,
                         MaximumPageNumbersToDisplay = 5
                     })
    </div>
</div>