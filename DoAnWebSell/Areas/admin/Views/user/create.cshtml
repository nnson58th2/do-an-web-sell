@model Model.EF.QuanTri

@{
    ViewBag.Title = "Thêm mới người dùng";
    Layout = "~/Areas/admin/Views/Shared/_Layouts.cshtml";
}
@section header {
    Thêm mới người dùng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("create", "user", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="container">
                                <div class="card card-register mx-auto mt-5">
                                    <div class="card-header">Đăng ký người dùng</div>
                                    <div class="card-body">
                                        <div class="form-label-group form-group">
                                            @Html.TextBoxFor(model => model.Email, new { @id = "inputUserName", @class = "form-control", @autofocus = "autofocus" })                          
                                            <label for="inputUserName">User Name</label>
                                        </div>
                                        <div class="form-label-group form-group">
                                            @Html.PasswordFor(model => model.Password, new { @id = "inputPassword", @class = "form-control"})                          
                                            <label for="inputPassword">Password</label>
                                        </div>
                                        <div class="form-label-group form-group">
                                            @Html.TextBoxFor(model => model.HoTen, new { @id = "inputHoTen", @class = "form-control" })
                                            <label for="inputHoten">Họ tên</label>
                                        </div>
                                        <div class="form-label-group form-group">
                                            @Html.TextBoxFor(model => model.DienThoai, new { @id = "inputDienThoai", @class = "form-control" })
                                            <label for="inputDienThoai">Điện thoại</label>
                                        </div>
                                        <div class="form-label-group form-group">
                                            @Html.TextBoxFor(model => model.Email, new { @id = "inputEmail", @class = "form-control" })
                                            <label for="inputEmail">Email</label>
                                        </div>
                                        <div class="form-label-group form-group">
                                            @Html.TextBoxFor(model => model.DiaChi, new { @id = "inputDiaChi", @class = "form-control" })
                                            <label for="inputDiaChi">Địa chỉ</label>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Quyen, "Quyền", htmlAttributes: new { @class = "control-label mr-4" })
                                            Víp @Html.RadioButtonFor(model => model.Quyen, "True") &nbsp;
                                            Thường @Html.RadioButtonFor(model => model.Quyen, "False", new { @checked = "checked" })
                                            @Html.ValidationMessageFor(model => model.Quyen, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TrangThai, "Hoạt động", htmlAttributes: new { @class = "control-label mr-4" })
                                            @Html.CheckBoxFor(model => model.TrangThai, "True")
                                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
