@model List<Model.EF.Menu>

<ul class="header-most-top">
    <li class="text-center border-right text-white">
        <a href="#" class="text-white">
            <i class="fa fa-truck mr-2"></i>Theo dõi đơn hàng
        </a>
    </li>
    <li class="text-center text-white mr-3">
        <i class="fa fa-phone mr-2"></i> 001 234 5678
    </li>
    @{
        var session = (UserLogin)Session[DoAnWebSell.Common.CommonConstants.USER_SESSION];
    }

    @if (session == null)
    {
        foreach (var item in Model)
        {
            <li class="text-center pt-2 pb-2 btn--pypl">
                <a href="@item.Link" target="@item.Target" class="text-white">@item.Text</a>
            </li>
        }
    }
    else
    {
        <li class="font-weight-bold text-capitalize text-white pl-4"><i class="fa fa-user-circle" style="font-size:1.3rem;"></i> @session.Name</li>
        <li><a href="/user/logout" class="btn btn-danger" style="font-size: .8rem">Đăng xuất</a></li>
    }
</ul>