@model List<DoAnWebSell.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal sum = 0;
}

@section jsFooter {
    <script src="/assets/client/js/controller/cartController.js"></script>
}

<div class="container p-4">
    @if (Model.Count > 0)
    {
        <div class="cart_table">
            <table>
                <thead>
                    <tr>
                        <th width="12%">Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th width="15%">Đơn giá</th>
                        <th width="12%">Số lượng</th>
                        <th width="15%">Thành tiền</th>
                        <th width="5%">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center;"><img src="/assets/client/images/@item.Product.HinhAnh" width="70" /></td>
                            <td style="font-weight:bold; color:#337ab7;">@item.Product.TenSP</td>

                            @*Nếu có giá khuyến mãi thì lấy giá khuyến mãi*@
                            @if (item.Product.GiaKhuyenMai != null)
                            {
                                if (item.Product.GiaKhuyenMai.HasValue)
                                {
                                    <td style="text-align: center;">@item.Product.GiaKhuyenMai.Value.ToString("N0") ₫</td>
                                }
                                else
                                {
                                    <td style="text-align: center;">Liên hệ</td>
                                }
                            }
                            else
                            {
                                if (item.Product.DonGia.HasValue)
                                {
                                    <td style="text-align: center;">@item.Product.DonGia.Value.ToString("N0") ₫</td>
                                }
                                else
                                {
                                    <td style="text-align: center;">Liên hệ</td>
                                }
                            }

                            <td style="text-align: center;">
                                @*<button type="submit" class="value-minus" field="quantity" name="minus" id="value-minus2" onclick="minusqty()">-</button>*@
                                <input type="number" name="quantity" class="txtQuantity text-center" data-id="@item.Product.MaSP" value="@item.Quantity" min="1" />
                                @*<button type="submit" class="value-plus" field="quantity" name="plus" id="value-plus2">+</button>*@
                            </td>

                            @*Nếu có giá khuyến mãi thì lấy giá khuyến mãi để tính thành tiền*@
                            @if (item.Product.GiaKhuyenMai != null)
                            {
                                if (item.Product.GiaKhuyenMai.HasValue)
                                {
                                    <td style="text-align: center;">@((item.Product.GiaKhuyenMai.GetValueOrDefault(0) * item.Quantity).ToString("N0")) ₫</td>
                                }
                                else
                                {
                                    <td style="text-align: center;">0 ₫</td>
                                }
                            }
                            else
                            {
                                if (item.Product.DonGia.HasValue)
                                {
                                    <td style="text-align: center;">@((item.Product.DonGia.GetValueOrDefault(0) * item.Quantity).ToString("N0")) ₫</td>
                                }
                                else
                                {
                                    <td style="text-align: center;">0 ₫</td>
                                }
                            }

                            <td style="text-align: center;"><a href="#" data-id="@item.Product.MaSP" class="btn-delete"><i class="fa fa-trash"></i></a></td>
                        </tr>
                        //Tính tổng tiền
                        if (item.Product.GiaKhuyenMai != null)
                        {
                            sum += decimal.Parse((string)(item.Product.GiaKhuyenMai.GetValueOrDefault(0) * item.Quantity).ToString("N0"));
                        }
                        else
                        {
                            sum += decimal.Parse((string)(item.Product.DonGia.GetValueOrDefault(0) * item.Quantity).ToString("N0"));
                        }
                    }
                </tbody>

                <tbody>
                    <tr>
                        <td colspan="4" class="font-weight-bold text-center text-uppercase">Tổng tiền</td>
                        @if (sum == 0)
                        {
                            <td colspan="1" style="text-align: center;">0 ₫</td>
                        }
                        else
                        {
                            <td colspan="1" class="font-weight-bold text-center">@sum.ToString("0#,##0") ₫</td>
                        }
                    </tr>
                </tbody>

            </table>
        </div>

        <div class="function">
            <button id="btnContinue" class="btn btn-danger">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn btn-default">Cập nhập giỏ hàng</button>
            <button id="btnDeleteAll" class="btn btn-danger">Xóa giỏ hàng</button>
            <button id="btnPayment" class="btn btn-success float-right">Thanh toán</button>
        </div>
    }
    else
    {
        <span class="alert alert-danger mt-3">Chưa có sản phẩm nào trong giỏ hàng</span>
    }
</div>