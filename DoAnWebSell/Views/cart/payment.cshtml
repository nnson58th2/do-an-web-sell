@model List<DoAnWebSell.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal sum = 0;
}

@section jsFooter {
    <script src="/assets/client/js/controller/cartController.js"></script>
}

<div class="container">
    @if (Model.Count > 0)
    {
        <div class="cart_table">
            <table>
                <thead>
                    <tr>
                        <th width="12%">Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th width="15%">Đơn giá</th>
                        <th width="12%">Số lượng</th>
                        <th width="15%">Thành tiền</th>
                        <th width="5%">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td style="text-align: center;"><img src="/assets/client/images/@item.Product.HinhAnh" width="70" /></td>
                            <td style="font-weight:bold; color:#337ab7;">@item.Product.TenSP</td>

                            @*Nếu có giá khuyến mãi thì lấy giá khuyến mãi*@
                            @if (item.Product.GiaKhuyenMai != null)
                            {
                                <td style="text-align: center;">@item.Product.GiaKhuyenMai.GetValueOrDefault(0).ToString("N0") ₫</td>
                            }
                            else
                            {
                                <td style="text-align: center;">@item.Product.DonGia.GetValueOrDefault(0).ToString("N0") ₫</td>
                            }

                            <td style="text-align: center;">
                                @*<button type="submit" class="value-minus" field="quantity" name="minus" id="value-minus2" onclick="minusqty()">-</button>*@
                                <input type="number" class="txtQuantity text-center" data-id="@item.Product.MaSP" value="@item.Quantity" min="1" />
                                @*<button type="submit" class="value-plus" field="quantity" name="plus" id="value-plus2">+</button>*@
                            </td>

                            @*Nếu có giá khuyến mãi thì lấy giá khuyến mãi để tính thành tiền*@
                            @if (item.Product.GiaKhuyenMai != null)
                            {
                                <td style="text-align: center;">@((item.Product.GiaKhuyenMai.GetValueOrDefault(0) * item.Quantity).ToString("N0")) ₫</td>
                            }
                            else
                            {
                                <td style="text-align: center;">@((item.Product.DonGia.GetValueOrDefault(0) * item.Quantity).ToString("N0")) ₫</td>
                            }

                            <td style="text-align: center;"><a href="#" data-id="@item.Product.MaSP" class="btn-delete"><i class="fa fa-trash"></i></a></td>
                        </tr>
                        //Tính tổng tiền
                        if (item.Product.GiaKhuyenMai != null)
                        {
                            sum += decimal.Parse((string)(item.Product.GiaKhuyenMai.GetValueOrDefault(0) * item.Quantity).ToString("N0"));
                        }
                        else
                        {
                            sum += decimal.Parse((string)(item.Product.DonGia.GetValueOrDefault(0) * item.Quantity).ToString("N0"));
                        }
                    }
                </tbody>

                <tbody>
                    <tr>
                        <td colspan="4" class="font-weight-bold text-center text-uppercase">Tổng tiền</td>
                        @if (sum == 0)
                        {
                            <td colspan="1" style="text-align: center;">0 ₫</td>
                        }
                        else
                        {
                            <td colspan="1" class="font-weight-bold text-center">@sum.ToString("0#,##0") ₫</td>
                        }                                
                    </tr>
                </tbody>

            </table>
        </div>

        <button id="btnContinue" class="btn btn-info mb-4 ml-3">Tiếp tục mua hàng</button>
    }

    <div class="session-group">
        <div class="col-md-6">
            <h3><label class="control-label mb-3">Thông tin mua hàng</label></h3>
            @using (Html.BeginForm("payment", "cart", FormMethod.Post))
            {
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="text" name="shipName" id="inputName" class="form-control" placeholder="Họ và tên" required="required" autofocus="autofocus">
                        <label for="inputName">Họ và tên</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-label-group">
                        <input type="tel" name="mobile" id="inputPhone" class="form-control" placeholder="Số điện thoại" required="required">
                        <label for="inputPhone">Số điện thoại</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-label-group">
                        <input type="text" name="address" id="inputAddress" class="form-control" placeholder="Địa chỉ" required="required">
                        <label for="inputAddress">Địa chỉ</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-label-group">
                        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email">
                        <label for="inputEmail">Email</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Đặt hàng</button>
            }
        </div>
    </div>
</div>
