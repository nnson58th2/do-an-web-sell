@model PagedList.IPagedList<Model.EF.SanPham>
@using PagedList.Mvc


@{
    ViewBag.Title = "Tất cả sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container ">
    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
        <h4 class="heading-tittle text-center">Danh sách tất cả sản phẩm</h4>
        <div class="row mb-4">
            @foreach (var item in Model)
            {
                var link = "/chi-tiet/" + item.MetaTitle + "-" + item.MaSP;
                <div class="col-md-3 product-men mt-4">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item text-center">
                            <a href="@link"><img src="/assets/client/images/@item.HinhAnh" alt="@item.TenSP"></a>
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="@link" class="link-product-add-cart">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                        <div class="item-info-product text-center border-top mt-4">
                            <h4 class="pt-1">
                                <a href="#">@item.TenSP</a>
                            </h4>
                            <div class="info-product-price">
                                @if (item.GiaKhuyenMai != null)
                                {
                                    if (item.GiaKhuyenMai.HasValue)
                                    {
                                        <span class="item_price">@item.GiaKhuyenMai.Value.ToString("N0")₫</span>
                                        <del>@item.DonGia.Value.ToString("N0")₫</del>
                                    }
                                    else
                                    {
                                        <span class="item_price">Liên hệ</span>
                                    }
                                }
                                else
                                {
                                    if (item.DonGia.HasValue)
                                    {
                                        <span class="item_price">@item.DonGia.Value.ToString("N0")₫</span>
                                    }
                                    else
                                    {
                                        <span class="item_price">Liên hệ</span>
                                    }
                                }
                            </div>
                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                <h4><a href="/them-gio-hang?productId=@item.MaSP&quantity=1" class="button btn">Thêm vào giỏ</a></h4>
                            </div>
                        </div>
                    </div>
                </div>
            }           
        </div>
        @Html.PagedListPager(Model, page => Url.Action("productAll", new { page }))      
    </div>
</div>