@model Model.EF.DonDatHang

@{
    ViewBag.Title = "Chỉnh sửa thông tin đơn đặt hàng";
    Layout = "~/Areas/admin/Views/Shared/_Layouts.cshtml";
}

@section header {
    Cập nhập thông tin đơn hàng
}

