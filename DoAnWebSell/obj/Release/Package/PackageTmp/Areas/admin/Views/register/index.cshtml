@model DoAnWebSell.Models.RegisterModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng ký</title>
    <!-- Custom fonts for this template-->
    <link href="/assets/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="/assets/admin/css/sb-admin.css" rel="stylesheet">

    <link href="/assets/admin/css/style.css" rel="stylesheet" />
</head>
<body class="bg-hide-under">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Đăng ký tài khoản</div>
            <div class="card-body">
                @using (Html.BeginForm("register", "register", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Name, new { @id = "inputFullName", @class = "form-control", @placeholder = "Họ tên đầy đủ", @autofocus = "autofocus" })
                            <label for="inputFullName">Họ tên đầy đủ</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.UserName, new { @id = "inputUserName", @class = "form-control", @placeholder = "Tài khoản", @autofocus = "autofocus" })
                            <label for="inputUserName">Tài khoản</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.PasswordFor(model => model.Password, new { @id = "inputPassword", @placeholder = "Mật khẩu", @class = "form-control" })
                            <label for="inputPassword">Mật khẩu</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @id = "inputConfirmPassword", @placeholder = "Nhập lại mật khẩu", @class = "form-control" })
                            <label for="inputConfirmPassword">Nhập lại mật khẩu</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Phone, new { @id = "inputPhone", @placeholder = "Số điện thoại", @class = "form-control" })
                            <label for="inputPhone">Số điện thoại</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Address, new { @id = "inputAddress", @placeholder = "Địa chỉ", @class = "form-control" })
                            <label for="inputAddress">Địa chỉ</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Email, new { @id = "inputEmail", @placeholder = "Email", @class = "form-control" })
                            <label for="inputEmail">Email</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-block">Đăng ký</button>
                }
                <div class="d-flex justify-content-around mt-3">
                    <a class="medium" href="/admin/login/">Đăng nhập</a>
                    <a class="medium" href="#">Quên mật khẩu?</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/assets/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/assets/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>
</html>
