@model List<Model.EF.Menu>


<!-- navigation -->
<div class="sticky-top navbar-inner">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto text-center mr-xl-5 text-uppercase">
                    @foreach(var item in Model)
                    {
                        <li class="nav-item mr-lg-2 mb-lg-0 mb-2"><a class="nav-link" href="@item.Link" target="@item.Target">@item.Text</a></li>
                    }
                </ul>
            </div>
        </nav>
    </div>
</div>
<!-- //navigation -->